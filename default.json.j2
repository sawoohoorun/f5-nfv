                }
            ],
            "cmpHash": "dst-ip"
        },
        "egress": {
            "class": "SelfIp",
            "address": "172.16.102.{{node_id}}/24",
            "vlan": "vlan102",
            "allowService": "all",
            "trafficGroup": "traffic-group-local-only"
        },
        "vlan103": {
            "class": "VLAN",
            "tag": 103,
            "mtu": 1500,
            "interfaces": [
                {
                    "name": "1.3",
                    "tagged": false
                }
            ],
            "cmpHash": "dst-ip"
        },
        "dag": {
            "class": "SelfIp",
            "address": "172.16.103.{{node_id}}/24",
            "vlan": "vlan103",
            "allowService": "all",
            "trafficGroup": "traffic-group-local-only"
        },
        "myRouteDomain": {
            "class": "RouteDomain",
            "id": 0,
            "routingProtocols": [
                "BGP"
            ],
            "vlans": [
                "vlan101",
                "vlan102",
                "vlan103"
            ]
        }
    }
}
