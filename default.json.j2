            "interfaces": [
                {
                    "name": "1.1",
                    "tagged": false
                }
            ],
            "cmpHash": "dst-ip"
        },
        "ingress": {
            "class": "SelfIp",
            "address": "172.16.101.{{node_id}}/24",
